<!DOCTYPE html>
<html>
  <head>
    <title>SessionLogin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  </head>

  <body>
  <nav class="navbar navbar-expand-lg sticky-top navbar-light" style="background-color: #3c5a98;color:white">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="#" style="color:white;font-size:40px;margin-left:153px"><b>facebook</b></a>
  
  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <form class="form-inline my-2 my-lg-0">
      <% if logged_in? %>
        <button style="background-color:navy;text-color:white;border:1px solid black;border-radius:5px;margin-left:800px"><%= link_to "Posts", posts_path %></button>
        <button style="background-color:navy;text-color:white;border:1px solid black;border-radius:5px;margin-left:800px"><%= link_to "Profile", user_path(current_user.id) %></button>
        <button style="background-color:navy;text-color:white;border:1px solid black;border-radius:5px;margin-left:10px"><%= link_to "Logout", session_path(current_user.id), method: :delete %></button>
      <% else %>
        <button style="background-color:navy;text-color:white;border:1px solid black;border-radius:5px;margin-left:800px"><%= link_to "Login", new_session_path %></button>
        <button style="background-color:navy;text-color:white;border:1px solid black;border-radius:5px;margin-left:10px"><%= link_to "SignUp", new_user_path %></button>
      <% end %>
    </form>
  </div>
  </nav>
    
  <%= yield %>
  </body>
</html>
